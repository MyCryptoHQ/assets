{
  "name": "@mycrypto/assets",
  "version": "1.0.0",
  "description": "Asset mapping for usage with CoinCap, CoinGecko, CryptoCompare and CryptoCurrency Icons",
  "main": "src/index.ts",
  "author": "MyCryptoHQ",
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "ts-node --files src",
    "test": "jest",
    "prettier": "prettier --write --config ./.prettierrc --list-different './**/*.ts'",
    "lint": "yarn run lint:ts && yarn run lint:tslint",
    "lint:ts": "tsc --noEmit",
    "lint:tslint": "tslint --project ."
  },
  "dependencies": {
    "@hapi/joi": "^16.1.7",
    "cryptocurrency-icons": "0.13.0",
    "execa": "^3.3.0",
    "listr": "^0.14.3",
    "node-fetch": "^2.6.0",
    "parse-eth-tokens": "^0.3.0",
    "string-similarity": "^3.0.0"
  },
  "devDependencies": {
    "@types/hapi__joi": "^16.0.3",
    "@types/jest": "^24.0.23",
    "@types/listr": "^0.14.2",
    "@types/node": "^12.12.7",
    "@types/node-fetch": "^2.5.3",
    "@types/string-similarity": "^3.0.0",
    "codecov": "^3.6.5",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.3",
    "prettier": "^1.19.1",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.5.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.7.2"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --config ./.prettierrc --config-precedence file-override",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint && yarn run test && lint-staged"
    }
  }
}
